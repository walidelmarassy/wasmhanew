<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wasmhanew.MainActivity"
    android:background="#fff"
    >
    <TextView
        android:id="@+id/enterweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="ادخل الوزن"
        android:textColor="#707070"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/enterweightedittext"
        app:layout_constraintStart_toStartOf="parent@+id/enterweight"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/enterweightedittext"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/wasmha_curve"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/enterimei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/enterweightedittext"
        app:layout_constraintStart_toStartOf="@+id/enterweight"
        android:textColor="#707070"
        android:textSize="23dp"
        android:text="ادخل الimei"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/enterImeiedittext"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="@id/enterweightedittext"
        app:layout_constraintTop_toBottomOf="@+id/enterimei"
        android:background="@drawable/wasmha_curve"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/namesave"
        android:layout_width="123dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/enterImeiedittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/savebutton"
        android:text="حفظ"
        android:textSize="20sp"
        android:textColor="#fff"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
